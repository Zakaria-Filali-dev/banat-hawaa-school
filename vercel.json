{
  "version": 2,
  "name": "banat-hawaa-school",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.mjs": {
      "runtime": "nodejs18.x"
    }
  }
}
  